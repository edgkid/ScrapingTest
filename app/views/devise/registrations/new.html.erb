<div class="container" style=" width: 70%; margin-left: 15%; margin-rigth:15%; margin-top: 20%;">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row" style= "margin-top:2%;">
    <div class="col-lg">
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "correo@ejemplo.com" %>
      </div>
    </div>
  </div>

  <div class="row" style= "margin-top:2%;">
    <div class="col-lg">
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "password" %>
      </div>
    </div>
  </div>

  <div class="row" style= "margin-top:2%;">
    <div class="col-lg">
      <div class="form-group">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "confirmar password" %>
      </div>
    </div>
  </div>

  <div class="row" style= "margin-top:2%;">
    <div class="col-lg">
      <div class="form-group">
        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-primary", style: "width: 100%;" %>
        </div>
      </div>
    </div>
  </div>

  <%= render "devise/shared/links" %>
  
<% end %>
  
  

</div>